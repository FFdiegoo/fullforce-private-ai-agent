# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10
RATE_LIMIT_CHAT_MAX=50
RATE_LIMIT_ADMIN_MAX=20

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_REFRESH_THRESHOLD_MINUTES=5

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true

# Error Monitoring
ERROR_MONITORING_ENABLED=true
ADMIN_ERROR_NOTIFICATIONS=true

# CRON Configuration
# CRON_BYPASS_KEY=your_secure_cron_bypass_key_here (deprecated)

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MODEL_SIMPLE=gpt-4-turbo
OPENAI_MODEL_COMPLEX=gpt-4

# Database Configuration (REQUIRED for RAG Pipeline)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
DIRECT_URL="postgresql://username:password@localhost:5432/database_name"

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 2FA Configuration
TOTP_ISSUER=CSrental
TOTP_WINDOW=2

# Development Mode (set to false in production)
NODE_ENV=development